{{!-- signup.hbs --}}
<div class="carrier">
    <div class="signup-container">
        <div class="signup-header">Welcome to My Page</div>
        <p class="text-muted">Signup to Explore the Shop Cart</p>
        <form action="/signup" method="post" class="signup-form">
            <div class="mb-3">
                <label for="exampleInputName" class="form-label">Name</label>
                <input type="text" class="signup-input" id="exampleInputName" name="Name" required>
            </div>
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Email address</label>
                <input type="email" class="signup-input" id="exampleInputEmail1" name="Email" required>
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Password</label>
                <input type="password" class="signup-input" id="exampleInputPassword1" name="Password" required>
            </div>
            <button type="submit" class="signup-button">Sign Up</button>
            <div class="signup-footer">
                Already have an account? <a href="/login">Log In</a>
            </div>
        </form>
    </div>
</div>

<style>
    .carrier {
        background: linear-gradient(45deg, #f54ea2, #ff7676);
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 0;
        font-family: Arial, sans-serif;
    }
    .signup-container {
        background: #fff;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        max-width: 400px;
        width: 100%;
        text-align: center;
    }
    .signup-header {
        font-size: 1.5rem;
        margin-bottom: 1rem;
    }
    .signup-form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }
    .signup-input {
        border: 1px solid #ddd;
        padding: 0.75rem;
        border-radius: 4px;
    }
    .signup-button {
        background: linear-gradient(45deg, #f54ea2, #ff7676);
        color: #fff;
        border: none;
        padding: 0.75rem;
        border-radius: 4px;
        cursor: pointer;
    }
    .signup-button:hover {
        opacity: 0.9;
    }
    .signup-footer {
        margin-top: 1rem;
        font-size: 0.875rem;
    }
    .signup-footer a {
        color: #f54ea2;
        text-decoration: none;
    }
    .signup-footer a:hover {
        text-decoration: underline;
    }
</style>
