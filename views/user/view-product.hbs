{{!-- view-product.hbs --}}
<section>
    <div class="container-md m-sm-2 mt-5">
        <div class="row g-4">
            {{#each products}}
            <div class="col-md-3 col-sm-6 p-3">
                <div class="card h-100">
                    <img src="/product-images/{{this._id}}.jpg" class="card-img-top" alt="Product Image" style="height: 200px;">
                    <div class="card-body">
                        <h5 class="card-title">{{this.productName}}</h5>
                        <h6 class="card-title">{{this.category}}</h6>
                        <b><i class="fa-solid fa-indian-rupee-sign"></i> {{this.price}}</b>
                        <p class="card-text">{{this.description}}</p>
                        {{!-- <a href="/add-to-cart/{{this._id}}" class="btn btn-primary">Add to Cart</a> --}}
                        <button onclick="addToCart('{{this._id}}', event)" class="btn btn-primary">Add to Cart</button>

                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>